@model System.Collections.Generic.IEnumerable<EloWeb.Models.Player>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Leaderboard</h2>
<h4>
@Html.ActionLink("Add Game", "Create", "Games", null, new {@class = "btn btn-primary"}) | @Html.ActionLink("Add Player", "Create", "Players", null, new {@class = "btn btn-default"})
</h4>

<table class="table table-striped">
	<thead>
        <tr>
            <th>Rank</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.CurrentRating)</th>            
            <th>Played</th>
            <th>Win Rate</th>
            <th>Change</th>
            <th>Last Change</th>            
        </tr>
    </thead>
    <tbody>
    @{ var rank = 1; }
    @foreach (var item in Model) {
        <tr>
            <td>@rank</td>
            <td>@Html.ActionLink(item.Name, "Details", "Players", new { name = item.Name }, null)</td>
            <td>@Html.DisplayFor(modelItem => item.CurrentRating)</td>            
            <td>@Html.DisplayFor(modelItem => item.GamesPlayed)</td>
            <td>@Html.DisplayFor(modelItem => item.WinRate)%</td>
            <td>@Html.DisplayFor(modelItem => item.LatestRatingChange)</td>
            <td>@Html.DisplayFor(modelItem => item.CurrentRating.TimeFrom, "CustomDateTime")</td>
        </tr>
        rank++;
    }
    </tbody>
</table>
