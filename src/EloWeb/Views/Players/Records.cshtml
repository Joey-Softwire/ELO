@using System.Linq
@model EloWeb.ViewModels.Records

@{
    ViewBag.Title = "Records";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Records</h2>

<div>    
    <table>
        <tr>
            <th>
                @Html.ActionLink("All-Time Rating", "MaxRating", "Tables") (@Html.DisplayFor(m => m.MostRatingsPointsEver.First().MaxRating))
            </th>
        </tr>
        @foreach (var player in Model.MostRatingsPointsEver)
        {
            <tr>
                <td>
                    @Html.ActionLink(player.Name, "Details", "Players", new { name = player.Name }, null)
                </td>
            </tr>
        }
    </table>

    <hr />

    <table>
        <tr>
            <th>
