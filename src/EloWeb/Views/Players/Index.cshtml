@model System.Collections.Generic.IEnumerable<EloWeb.Models.Player>

@{
    ViewBag.Title = "Players";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Players</h2>

<h4>
    @Html.ActionLink("Add Player", "Create", "Players", null, new { @class = "btn btn-default" })
</h4>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.CurrentRating)</th>
        <th>
            Created
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "Details", "Players", new { name = item.Name }, null)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CurrentRating)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedTime, "CustomDate")
        </td>
    </tr>
}

</table>
