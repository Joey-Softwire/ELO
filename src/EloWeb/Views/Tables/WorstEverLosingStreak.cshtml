@model System.Collections.Generic.IEnumerable<EloWeb.Models.Player>

@{
    ViewBag.Title = "Worst Ever Losing Streak Leaderboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Worst Ever Losing Streak</h2>

<h4>
@Html.ActionLink("Add Game", "Create", "Games", null, new { @class = "btn btn-primary" }) | @Html.ActionLink("Add Player", "Create", "Players", null, new { @class = "btn btn-default" })
</h4>

<table class="table">
    <tr>
        <th>
            Rank
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LongestLosingStreak)
        </th>
    </tr>

@{ var rank = 1; }
@foreach (var item in Model) {
    <tr>
        <td>
            @rank
        </td>
        <td>
            @Html.ActionLink(item.Name, "Details", "Players", new { name = item.Name }, null)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LongestLosingStreak)
        </td>
    </tr>
    rank++;
}
</table>
